<div class="max-w-screen-lg mx-auto bg-green-50 shadow-md rounded-lg p-8">
  <!-- Plant Image -->
  <div class="text-center">
    <%= image_tag @plant.picture, alt: @plant.common_name, class: "w-full h-64 object-cover rounded-md mb-6 shadow-lg" %>
  </div>

  <!-- Plant Name and Scientific Name -->
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold text-green-700 mb-2"><%= @plant.common_name %></h1>
    <p class="text-xl italic text-gray-700"><%= @plant.scientific_name %></p>
  </div>

  <!-- Plant Details -->
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-4">
      <p><strong>🌿 Family:</strong> <%= @plant.family %></p>
      <p><strong>🌍 Zone:</strong> <%= @plant.zone %></p>
      <p><strong>🌱 Type:</strong> <%= @plant.perennial ? "Perennial" : "Annual" %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <h2 class="text-xl font-semibold text-green-600 mb-4">Layers</h2>
      <% if @plant.layers.present? %>
        <ul class="list-disc pl-6">
          <% @plant.layers.split(",").each do |layer| %>
            <li><%= layer.strip %></li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500">No layers specified.</p>
      <% end %>
    </div>
  </div>

  <!-- Plant Functions -->
  <div class="bg-white rounded-lg shadow p-6 mb-8">
    <h2 class="text-2xl font-semibold text-green-600 mb-4">Functions</h2>
    <% if @plant.function.present? %>
      <ul class="list-disc pl-6">
        <% @plant.function.split(",").each do |func| %>
          <li><%= func.strip %></li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500">No functions specified.</p>
    <% end %>
  </div>

  <!-- Back Button -->
  <div class="text-center">
    <%= link_to "← Back to Plant List", plants_path, class: "inline-block px-6 py-3 bg-green-600 text-white text-lg font-semibold rounded-md shadow hover:bg-green-500" %>
  </div>
</div>
