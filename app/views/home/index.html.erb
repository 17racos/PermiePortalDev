<!-- Background Container with a Nature-Inspired Gradient -->
<div class="bg-gradient-to-b from-green-200 via-green-100 to-green-50 py-24">
  <!-- Logo Section -->
  <div class="flex justify-center mb-12">
    <%= image_tag "permieportal-logo.png", size: "480x188", alt: "PermiePortal logo" %>
  </div>

  <!-- Welcome Text -->
  <div class="text-center text-gray-800">
    <h2 class="text-4xl font-bold text-green-700 mb-4">Welcome to PermiePortal!</h2>
    <p class="text-xl mb-6 px-4 sm:px-0 max-w-3xl mx-auto">
      Your central hub for permaculture education, resources, and community networking. 
      Join us in creating a sustainable future for all.
    </p>
  </div>

  <!-- Quick Links Section -->
  <div class="text-center mt-8">
    <h3 class="text-2xl font-semibold text-green-700 mb-6">Explore Permaculture</h3>
    <div class="space-y-4 text-lg">
      <%= link_to 'What is Permaculture?', whatisperm_resources_path, class: 'block text-green-800 hover:text-green-600' %>
      <%= link_to 'Why Does Permaculture Matter?', whyitmatters_resources_path, class: 'block text-green-800 hover:text-green-600' %>
      <%= link_to 'Plant Portal', plants_path, class: 'block text-green-800 hover:text-green-600' %>
      <%= link_to 'Community', community_path, class: 'block text-green-800 hover:text-green-600' %>
    </div>
  </div>

  <!-- Explore Resources Section -->
  <div class="text-center mt-12">
    <h3 class="text-2xl font-semibold text-green-700 mb-6">Additional Resources</h3>
    <div class="space-y-2">
      <%= link_to 'Permaculture Principles', 'https://permacultureprinciples.com', target: '_blank', class: 'text-green-600 hover:text-green-800 underline' %><br>
      <%= link_to 'Permaculture.org', 'https://permaculture.org', target: '_blank', class: 'text-green-600 hover:text-green-800 underline' %>
    </div>
  </div>

  <!-- Call to Action -->
  <div class="text-center mt-12">
    <p class="text-xl mb-4">ðŸŒ± Ready to take action?</p>
    <%= link_to 'Get Involved', get_involved_path, class: 'inline-block px-6 py-3 bg-green-600 text-white text-lg font-semibold rounded-lg shadow-lg hover:bg-green-500' %>
  </div>
</div>
