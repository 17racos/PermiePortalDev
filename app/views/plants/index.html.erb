<h1 class="text-3xl font-bold mb-6">Plant Catalog</h1>

<!-- Filter Form -->
<div class="mb-8 bg-white shadow-md rounded-lg p-6">
  <%= form_with url: plants_path, method: :get, local: true do %>
    <!-- Function Filters -->
    <div class="mb-6">
      <h2 class="text-lg font-semibold mb-2">Filter by Functions</h2>
      <% ["Edible", "Medicinal", "Nitrogen Fixer", "Wildlife Attractor", "Mulcher"].each do |function| %>
        <label class="inline-flex items-center">
          <%= check_box_tag "search[functions][]", function, params.dig(:search, :functions)&.include?(function), class: "mr-2" %>
          <%= function %>
        </label><br>
      <% end %>
    </div>

    <!-- Layer Filters -->
    <div class="mb-6">
      <h2 class="text-lg font-semibold mb-2">Filter by Layers</h2>
      <% ["Canopy", "Sub-canopy", "Shrub", "Herbaceous", "Groundcover", "Root", "Climbers"].each do |layer| %>
        <label class="inline-flex items-center">
          <%= check_box_tag "search[layers][]", layer, params.dig(:search, :layers)&.include?(layer), class: "mr-2" %>
          <%= layer %>
        </label><br>
      <% end %>
    </div>

    <!-- Zone Filters -->
    <div class="mb-6">
      <h2 class="text-lg font-semibold mb-2">Filter by Zones</h2>
      <% ["3", "4", "5", "6", "7", "8", "9", "10"].each do |zone| %>
        <label class="inline-flex items-center">
          <%= check_box_tag "search[zones][]", zone, params.dig(:search, :zones)&.include?(zone), class: "mr-2" %>
          <%= zone %>
        </label><br>
      <% end %>
    </div>

    <!-- Submit Button -->
    <div class="flex justify-end gap-4">
      <%= submit_tag "Search", class: "px-6 py-2 bg-green-600 text-white font-semibold rounded-md shadow hover:bg-green-500" %>
      <%= link_to "Clear Filters", plants_path, class: "px-6 py-2 bg-gray-300 text-gray-700 font-semibold rounded-md shadow hover:bg-gray-200" %>
    </div>
  <% end %>
</div>

<!-- Display Plants -->
<% if @plants.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @plants.each do |plant| %>
      <div class="bg-white shadow-md rounded-lg p-4 hover:shadow-lg transition">
        <%= image_tag(plant.picture.presence || 'default_plant_image.jpg', alt: plant.common_name, class: "w-full h-40 object-cover rounded-md mb-4") %>
        <h2 class="text-xl font-semibold text-green-700 hover:text-green-500">
          <%= link_to plant.common_name, plant_path(plant) %>
        </h2>
        <p class="text-gray-600 italic"><%= plant.scientific_name %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-center text-gray-500 mt-8">No plants match your search criteria.</p>
<% end %>
