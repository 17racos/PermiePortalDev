<div id="guides" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @guides.each do |guide| %>
    <div class="bg-white shadow-md rounded-lg hover:shadow-lg transition overflow-hidden">
      <div class="flex flex-col h-full">

        <!-- Guide Image (Prevent Blocking Link) -->
        <% if guide.image.present? %>
          <div class="flex-grow">
            <%= image_tag guide.image_url, alt: guide.title, class: 'w-full h-48 object-cover rounded-lg mb-4' %>
          </div>
        <% else %>
          <div class="flex-grow h-48 bg-gray-200 rounded-lg mb-4"></div>
        <% end %>

        <!-- Guide Content -->
        <div class="p-4 flex flex-col">
          <h2 class="text-lg font-semibold text-green-600 text-center mb-2">
            <%= guide.title %>
          </h2>
          <p class="text-sm text-gray-700 text-center">
            <%= truncate(guide.body, length: 100) %>
          </p>

          <!-- Read More Button -->
          <div class="mt-4">
            <%= link_to "Read More", guide_path(guide), class: "block px-4 py-2 bg-green-600 text-white text-center text-sm font-semibold rounded hover:bg-green-500" %>
          </div>
        </div>

      </div>
    </div>
  <% end %>
</div>
