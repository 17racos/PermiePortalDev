# Use official Ruby image
FROM ruby:3.3.6-bullseye

WORKDIR /app

# Install system dependencies
RUN apt-get update -qq && apt-get install -y \
    build-essential \
    libpq-dev \
    curl \
    git

# Install Node.js 18, npm 10, and Yarn (Required for ESBuild & Tailwind)
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get install -y nodejs && \
    npm install -g npm@10 yarn

# Verify Node.js, npm, and Yarn versions
RUN node -v && npm -v && yarn -v

# Copy application code
COPY . .

# ✅ Remove old `node_modules` and reinstall dependencies
RUN rm -rf node_modules yarn.lock && yarn install --check-files

# ✅ Ensure TailwindCSS is installed properly
RUN if [ ! -f node_modules/.bin/tailwindcss ]; then yarn add tailwindcss postcss autoprefixer --dev; fi

# ✅ Ensure TailwindCSS is initialized
RUN [ -f tailwind.config.js ] || yarn tailwindcss init -p

# ✅ Ensure correct Tailwind input file exists
RUN mkdir -p app/javascript/styles
RUN test -f app/javascript/styles/tailwind.css || echo "@tailwind base;\n@tailwind components;\n@tailwind utilities;" > app/javascript/styles/tailwind.css

# ✅ Check if `tailwindcss` exists
RUN ls -l node_modules/.bin/

# ✅ Use the full path to `tailwindcss` binary instead of `yarn run`
RUN node_modules/.bin/tailwindcss -i app/javascript/styles/tailwind.css -o app/assets/builds/tailwind.css --minify

# ✅ Install Gems
RUN bundle config set force_ruby_platform true
RUN bundle install --jobs=4 --retry=3

# ✅ Expose port 3000 for Rails development
EXPOSE 3000

# ✅ Start the Rails application
CMD ["bash", "-c", "rm -f tmp/pids/server.pid && bundle exec rails server -b 0.0.0.0"]
