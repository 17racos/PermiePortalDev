<div id="guides" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @guides.each do |guide| %>
    <div class="aspect-square bg-white shadow-md rounded-lg hover:shadow-lg transition overflow-hidden">
      <div class="flex flex-col h-full">
        <!-- Guide Image -->
        <% if guide.image.present? %>
          <div class="flex-grow">
            <%= image_tag guide.image, alt: guide.title, class: 'w-full h-full object-cover' %>
          </div>
        <% else %>
          <div class="flex-grow bg-gray-200 flex items-center justify-center">
            <p class="text-gray-500">No Image Available</p>
          </div>
        <% end %>

        <!-- Guide Content -->
        <div class="p-4 flex flex-col">
          <h2 class="text-lg font-semibold text-green-600 text-center mb-2">
            <%= guide.title %>
          </h2>
          <p class="text-sm text-gray-700 text-center">
            <%= truncate(guide.body, length: 100) %>
          </p>
          <div class="mt-4">
            <%= link_to "Read More", guide_path(guide), class: "block px-4 py-2 bg-green-600 text-white text-center text-sm font-semibold rounded hover:bg-green-500" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
