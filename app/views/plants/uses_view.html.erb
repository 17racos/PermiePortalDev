<h1 class="text-3xl font-bold mb-6">Plants with Function: <%= @function %></h1>

<% if @plants.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @plants.each do |plant| %>
      <div class="bg-white shadow-md rounded-lg p-4 hover:shadow-lg transition">
        <%= image_tag(plant.picture.presence || 'default_plant_image.jpg', alt: plant.common_name, class: "w-full h-40 object-cover rounded-md mb-4") %>
        <h2 class="text-xl font-semibold text-green-700 hover:text-green-500">
          <%= link_to plant.common_name, plant_path(plant.common_name) %>
        </h2>
        <p class="text-gray-600 italic"><%= plant.scientific_name %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-center text-gray-500 mt-8">No plants match this function.</p>
<% end %>

<div class="text-center mt-8">
  <%= link_to "← Back to Plant List", plants_path, class: "inline-block px-6 py-3 bg-green-600 text-white text-lg font-semibold rounded-md shadow hover:bg-green-500" %>
</div>

