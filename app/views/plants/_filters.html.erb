<div class="mb-8 bg-white shadow-md rounded-lg p-6">
  <!-- Filter Container with Flexbox -->
  <div class="flex flex-wrap justify-between gap-6">
    
    <!-- Function Filters -->
    <div class="mb-6 w-full sm:w-1/3">
      <h3 class="text-md font-semibold mb-2">Filter by Functions</h3>
      <% ["Edible", "Medicinal", "Nitrogen Fixer", "Wildlife Attractor", "Mulcher", "Dynamic Accumulator", "Erosion Control", "Animal Fodder", "Windbreaker", "Pollinator", "Border Plant", "Pest Management"].each do |plant_function| %>
        <label class="inline-flex items-center mb-1">
          <%= check_box_tag "search[plant_function][]", plant_function, params.dig(:search, :plant_function)&.include?(plant_function), class: "mr-2", onchange: "this.form.requestSubmit()" %>
          <%= plant_function %>
        </label><br>
      <% end %>
    </div>

    <!-- Layer Filters -->
    <div class="mb-6 w-full sm:w-1/3">
      <h3 class="text-md font-semibold mb-2">Filter by Layers</h3>
      <% ["Canopy", "Sub-canopy", "Shrub", "Herbaceous", "Groundcover", "Root", "Climbers"].each do |layer| %>
        <label class="inline-flex items-center mb-1">
          <%= check_box_tag "search[layers][]", layer, params.dig(:search, :layers)&.include?(layer), class: "mr-2", onchange: "this.form.requestSubmit()" %>
          <%= layer %>
        </label><br>
      <% end %>
    </div>

    <!-- Zone Filters -->
    <div class="mb-6 w-full sm:w-1/3">
      <h3 class="text-md font-semibold mb-2">Filter by Zones</h3>
      <% ["3", "4", "5", "6", "7", "8", "9", "10"].each do |zone| %>
        <label class="inline-flex items-center mb-1">
          <%= check_box_tag "search[zone][]", zone, params.dig(:search, :zone)&.include?(zone), class: "mr-2", onchange: "this.form.requestSubmit()" %>
          <%= zone %>
        </label><br>
      <% end %>
    </div>
    
  </div>
</div>
