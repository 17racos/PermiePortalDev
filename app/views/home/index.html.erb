<!-- Background Container with a nature-inspired gradient -->
<div class="bg-gradient-to-b from-green-200 via-green-100 to-green-50 py-24">
  <!-- Logo Section -->
  <div class="flex justify-center mb-12">
    <%= image_tag "permieportal-logo.png", size: "480x188", alt: "PermiePortal logo" %>
  </div>

  <!-- Welcome Text -->
  <div class="text-center text-gray-800">
    <h2 class="text-4xl font-bold text-green-700 mb-4">Welcome to PermiePortal!</h2>
    <p class="text-xl mb-6 px-4 sm:px-0 max-w-3xl mx-auto">
      Your central hub for permaculture education, resources, and community networking. Join us in creating a sustainable future for all.
    </p>
  </div>

  <!-- Explore Resources Section -->
  <div class="text-center text-gray-800">
    <p class="text-xl font-semibold mb-4">🌱 Explore our resources:</p>
    <div class="space-y-4 text-lg">
      <%= link_to 'Projects', projects_path, class: 'block text-green-800 hover:text-green-600' %>
      <%= link_to 'Plants', plants_path, class: 'block text-green-800 hover:text-green-600' %>
      <%= link_to 'Community', community_path, class: 'block text-green-800 hover:text-green-600' %>
    </div>
  </div>

  <!-- Additional Resources Section -->
  <div class="text-center text-gray-800 mt-8">
    <p class="text-xl font-semibold mb-4">🌍 Additional Resources:</p>
    <div class="space-y-2 text-lg">
      <strong>
        <a href="https://permacultureprinciples.com" target="_blank" class="border-b border-green-600 text-green-600 hover:text-green-800">Permaculture Principles</a>
      </strong>
      <br>
      <strong>
        <a href="https://permaculture.org" target="_blank" class="border-b border-green-600 text-green-600 hover:text-green-800">Permaculture.org</a>
      </strong>
    </div>
  </div>

  <!-- Call to Action -->
  <div class="text-center mt-12">
    <p class="text-xl mb-4">🌱 Ready to take action?</p>
    <%= link_to 'Get Involved', get_involved_path, class: 'inline-block px-6 py-3 bg-green-600 text-white text-lg font-semibold rounded-lg shadow-lg hover:bg-green-500' %>
  </div>
</div>

