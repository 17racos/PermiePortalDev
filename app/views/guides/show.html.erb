<div class="max-w-screen-lg mx-auto bg-white shadow-md rounded-lg p-8">
  <h1 class="text-4xl font-bold text-green-700 mb-4"><%= @guide.title %></h1>
  
  <% if @guide.image.present? %>
    <div class="mb-4">
      <%= image_tag @guide.image, alt: @guide.title, class: 'w-full h-auto rounded-lg' %>
    </div>
  <% end %>

  <p class="text-lg text-gray-700 leading-7"><%= simple_format(@guide.body) %></p>

  <div class="mt-6">
    <%= link_to "Back to Guides", guides_path, class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
  </div>
</div>
